{{> menu}}


<form class="box"  action="/placemark/{{street._id}}/updateplacemark/{{placemark._id}}" method="POST">
  <h2>Update Placemark</h2>
   <div class="field">
      <label class="label">Title</label> <input class="input" type="text" placeholder={{title}} name="title">
    </div>
  <div class="field">
  <label class="label">Description</label>
  <div class="control">
    <textarea class="textarea" type="text" placeholder="{{description}}" name="description"></textarea>
  </div>
</div>
    <div class="field">
      <label class="label">Year</label> <input class="input" type="number" placeholder="{{year}}" name="year">
    </div>
    <div class="field">
      <label class="label">Latitude</label> <input class="input" type="number" step="0.000001" placeholder="{{latitude}}" name="latitude">
      <p class="help">Please enter value between -90.000000 and 90.000000</p>
    </div>
    <div class="field">
      <label class="label">Longitude</label> <input class="input" type="number" step="0.000001" placeholder="{{longitude}}" name="longitude">
      <p class="help">Please enter value between -180.000000 and 180.000000</p>
    </div>
 <div class="field">
    <label class="label">Category</label>
    <div class="control">
      <div class="select">
        <select name="category">
          <option>Landmark</option>
          <option>Residence</option>
          <option>Event</option>
          <option>Other</option>
        </select>
      </div>
</div>
  </div>
  <button class="button is-primary">Update Placemark</button>
</form>

