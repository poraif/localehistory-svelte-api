<table class="table is-fullwidth is-striped is-hoverable">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
      {{#if admin}}
      {{else}}
        <tr>
          <td>
            {{firstName}} {{lastName}}
          </td>
          <td>
            {{email}}
          </td>
         <td>
            <a href="/admindashboard/users/delete/{{_id}}" class="button is-danger is-small">
              <span class="icon">
                <i class="fas fa-trash"></i>
              </span>
            </a>
          </td>
        </tr>
      {{/if}}
    {{/each}}
  </tbody>
</table>
