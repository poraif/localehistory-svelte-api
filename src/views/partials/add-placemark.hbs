<form action="/street/{{street._id}}/addplacemark" method="POST" class="is-fullwidth">
  <div class="columns is-multiline">
    <div class="column is-half">
      <div class="field">
        <label class="label">Title</label>
        <div class="control">
          <input class="input" type="text" placeholder="Enter placemark title" name="title">
        </div>
      </div>
      <div class="field">
        <label class="label">Year</label>
        <div class="control">
          <input class="input" type="number" placeholder="Enter year where applicable" name="year">
        </div>
      </div>
    </div>
    <div class="column is-half">
      <div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea class="textarea" type="text" placeholder="Enter placemark description" name="description"></textarea>
        </div>
      </div>
      <div class="field">
        <label class="label">Latitude</label>
        <div class="control">
          <input class="input" type="number" step="0.000001" placeholder="53.349801" name="latitude">
        </div>
        <p class="help">Please enter value between -90.000000 and 90.000000</p>
      </div>
      <div class="field">
        <label class="label">Longitude</label>
        <div class="control">
          <input class="input" type="number" step="0.000001" placeholder="6.260302" name="longitude">
        </div>
        <p class="help">Please enter value between -180.000000 and 180.000000</p>
      </div>
      <div class="field">
        <label class="label">Category</label>
        <div class="control">
          <div class="select">
            <select name="category">
              <option>Landmark</option>
              <option>Residence</option>
              <option>Event</option>
              <option>Other</option>
            </select>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link">Submit</button>
    </div>
  </div>
</form>
